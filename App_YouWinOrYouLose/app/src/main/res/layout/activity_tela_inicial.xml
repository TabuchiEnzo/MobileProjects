<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaInicial">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="98dp"
        android:text="YOU WIN OR YOU LOSE"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lose"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="72dp"
        android:onClick="sim"
        android:text="LOSE"
        app:cornerRadius="12dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/win"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/win" />

    <Button
        android:id="@+id/win"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="275dp"
        android:onClick="sim"
        android:text="WIN"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="224dp"
        android:layout_height="0dp"
        android:layout_marginBottom="96dp"
        android:text="Aqui vemos se você é muito bom, e queremos saber se você ganhou ou perdeu, TENTE!!!"
        app:layout_constraintBottom_toTopOf="@+id/win"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>